{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://our.address.com/addressNew.schema.json",
    "type": "object",
    "properties": {
        "country": {
            "type": "string",
            "minlength": 1,
            "maxLength": 56
        },
        "state": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
        },
        "city": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
        },
        "address": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
        },
        "addressType": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
        },
        "postalCode": {
            "type": "integer"
        },
        "customerId": {
            "type": "integer"
        }
    },
    "additionalProperties": false,
    "required": [
        "country",
        "state",
        "city",
        "address",
        "addressType",
        "postalCode",
        "customerId"
    ]
}  